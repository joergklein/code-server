# http://editorconfig.org

# this file is the top-most editorconfig file
root = true

# all files
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# markdown files
[*.{md,mdx}]
indent_style = space
indent_size =4
trim_trailing_whitespace = false

# JSON Files
[*.{json,json5,webmanifest}]
indent_style = space
indent_size = 2

# configuration files
[*.{toml,yaml,yml}]
indent_style = space
indent_size = 2

# web files
[*.{html,css,scss}]
indent_style = space
indent_size = 2

# python files
[*.py]
indent_style = space

# shell files
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
